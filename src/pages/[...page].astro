---
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import Pagination from '../components/Pagination.astro';
import { getCollection } from 'astro:content';

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = await getCollection('posts', ({ data }) => !data.draft);
  const sorted = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return paginate(sorted, { pageSize: 10 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

const allPosts = await getCollection('posts', ({ data }) => !data.draft);
const tagCounts = new Map<string, number>();
for (const post of allPosts) {
  for (const tag of post.data.tags) {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  }
}
const topTags = [...tagCounts.entries()].sort((a, b) => b[1] - a[1]).slice(0, 8);
const totalPosts = allPosts.length;
---

<BaseLayout title={page.currentPage === 1 ? "Top" : `Page ${page.currentPage}`} fullWidth>
  <!-- Hero Section (only on page 1) -->
  {page.currentPage === 1 && (
    <section class="relative overflow-hidden bg-hero-gradient dark:bg-hero-gradient bg-gray-900 text-white">
      <!-- Grid overlay -->
      <div class="absolute inset-0 bg-grid opacity-40"></div>

      <!-- Gradient orbs -->
      <div class="orb w-96 h-96 bg-neon-sky/20 -top-20 -left-20 animate-float"></div>
      <div class="orb w-80 h-80 bg-gp-600/25 top-10 right-10 animate-float" style="animation-delay: -3s;"></div>
      <div class="orb w-64 h-64 bg-neon-blue/15 bottom-0 left-1/3 animate-float" style="animation-delay: -5s;"></div>

      <div class="relative max-w-5xl mx-auto px-4 sm:px-6 py-20 sm:py-28">
        <div class="max-w-2xl">
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/[0.08] border border-white/[0.1] text-sm text-gray-300 mb-6">
            <span class="w-2 h-2 rounded-full bg-neon-sky animate-pulse"></span>
            Startup & Design Blog
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight mb-6 leading-[1.1]">
            <span class="block">Like a</span>
            <span class="gradient-text">Silicon Valley</span>
          </h1>

          <p class="text-lg sm:text-xl text-gray-300 leading-relaxed mb-8 max-w-xl">
            起業、UI/UXデザイン、テクノロジー、組織づくりについてのブログ。サンフランシスコでの経験と学びを記録しています。
          </p>

          <div class="flex flex-wrap gap-3">
            <a href="/archive" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-white text-gray-900 font-semibold text-sm hover:bg-gray-100 transition-colors">
              Archive
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a href="/search" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-white/[0.08] border border-white/[0.12] text-white font-semibold text-sm hover:bg-white/[0.12] transition-colors">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              Search
            </a>
          </div>
        </div>

        <!-- Stats -->
        <div class="mt-14 flex gap-8 sm:gap-12">
          <div>
            <div class="text-2xl sm:text-3xl font-bold text-neon-sky">{totalPosts}</div>
            <div class="text-sm text-gray-400 mt-1">Articles</div>
          </div>
          <div>
            <div class="text-2xl sm:text-3xl font-bold text-gp-300">{tagCounts.size}</div>
            <div class="text-sm text-gray-400 mt-1">Tags</div>
          </div>
          <div>
            <div class="text-2xl sm:text-3xl font-bold text-gp-400">2</div>
            <div class="text-sm text-gray-400 mt-1">Sources</div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Content -->
  <div class="max-w-5xl mx-auto px-4 sm:px-6 py-12">
    <!-- Tags quick access (only on page 1) -->
    {page.currentPage === 1 && topTags.length > 0 && (
      <div class="mb-10">
        <div class="flex flex-wrap gap-2">
          {topTags.map(([tag, count]) => (
            <a
              href={`/tags/${tag}`}
              class="inline-flex items-center gap-1.5 px-3.5 py-1.5 rounded-full text-sm font-medium glass hover:shadow-glow dark:hover:shadow-glow transition-all duration-300"
            >
              <span class="text-gray-700 dark:text-gray-300">#{tag}</span>
              <span class="text-xs text-gray-400 dark:text-gray-500">({count})</span>
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Posts -->
    <section>
      <div class="flex items-center gap-3 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          {page.currentPage === 1 ? 'Recent Posts' : `Posts - Page ${page.currentPage}`}
        </h2>
        <div class="flex-1 h-px bg-gradient-to-r from-gray-200 dark:from-white/10 to-transparent"></div>
      </div>

      <div class="grid gap-4">
        {page.data.map(post => (
          <PostCard
            title={post.data.title}
            date={post.data.date}
            description={post.data.description}
            tags={post.data.tags}
            slug={post.slug}
            source={post.data.source}
          />
        ))}
      </div>

      <Pagination
        currentPage={page.currentPage}
        totalPages={page.lastPage}
        baseUrl="/"
      />
    </section>
  </div>
</BaseLayout>
