---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;

function pageUrl(page: number) {
  if (page === 1) return baseUrl;
  const base = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  return `${base}/${page}`;
}

// Build smart page numbers with ellipsis for mobile
function getPageNumbers(current: number, total: number): (number | '...')[] {
  if (total <= 5) {
    return Array.from({ length: total }, (_, i) => i + 1);
  }

  const pages: (number | '...')[] = [];

  // Always show first page
  pages.push(1);

  if (current > 3) {
    pages.push('...');
  }

  // Pages around current
  const start = Math.max(2, current - 1);
  const end = Math.min(total - 1, current + 1);

  for (let i = start; i <= end; i++) {
    pages.push(i);
  }

  if (current < total - 2) {
    pages.push('...');
  }

  // Always show last page
  pages.push(total);

  return pages;
}

const pageNumbers = getPageNumbers(currentPage, totalPages);
---

{totalPages > 1 && (
  <nav class="flex items-center justify-center gap-1 sm:gap-2 mt-8 flex-wrap" aria-label="Pagination">
    {currentPage > 1 && (
      <a
        href={pageUrl(currentPage - 1)}
        class="px-2.5 sm:px-3 py-2 rounded-lg text-sm font-medium text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
      >
        &larr; <span class="hidden sm:inline">Prev</span>
      </a>
    )}

    {pageNumbers.map(page =>
      page === '...' ? (
        <span class="px-1.5 sm:px-2 py-2 text-sm text-gray-400 dark:text-gray-500">
          &hellip;
        </span>
      ) : (
        <a
          href={pageUrl(page)}
          class:list={[
            'min-w-[36px] sm:min-w-[40px] px-2 sm:px-3 py-2 rounded-lg text-sm font-medium transition-colors text-center',
            page === currentPage
              ? 'bg-gradient-to-r from-neon-sky to-gp-600 text-white shadow-glow'
              : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800',
          ]}
        >
          {page}
        </a>
      )
    )}

    {currentPage < totalPages && (
      <a
        href={pageUrl(currentPage + 1)}
        class="px-2.5 sm:px-3 py-2 rounded-lg text-sm font-medium text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
      >
        <span class="hidden sm:inline">Next</span> &rarr;
      </a>
    )}
  </nav>
)}
