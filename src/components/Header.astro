---
const navItems = [
  { label: 'Blog Archive', href: '/archive' },
  { label: 'Tags', href: '/tags' },
  { label: 'note', href: '/note' },
  { label: 'Search', href: '/search' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 glass-heavy border-b border-gray-200/30 dark:border-white/[0.04]">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center group shrink-0">
        <span class="text-base sm:text-lg font-bold text-gray-900 dark:text-white group-hover:gradient-text transition-all duration-300">
          Like a Silicon Valley
        </span>
      </a>

      <!-- Navigation -->
      <nav class="hidden sm:flex items-center gap-0.5">
        {navItems.map(({ label, href }) => (
          <a
            href={href}
            class:list={[
              'px-3.5 py-2 rounded-lg text-sm font-medium transition-all duration-200',
              currentPath === href || (href !== '/' && currentPath.startsWith(href))
                ? 'bg-gp-600/10 dark:bg-neon-sky/10 text-gp-700 dark:text-neon-sky'
                : 'text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-white/[0.04]',
            ]}
          >
            {label}
          </a>
        ))}

        <div class="w-px h-5 bg-gray-200 dark:bg-white/10 mx-2"></div>

        <!-- Dark mode toggle -->
        <button
          id="theme-toggle"
          class="p-2 rounded-lg text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-neon-sky hover:bg-gray-100 dark:hover:bg-white/[0.04] transition-all duration-200"
          aria-label="Toggle dark mode"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg class="w-5 h-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>
      </nav>

      <!-- Mobile menu button -->
      <div class="sm:hidden flex items-center gap-1">
        <button
          id="theme-toggle-mobile"
          class="p-2 rounded-lg text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/[0.04]"
          aria-label="Toggle dark mode"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg class="w-5 h-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>
        <button
          id="mobile-menu-btn"
          class="p-2 rounded-lg text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/[0.04]"
          aria-label="Open menu"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden sm:hidden pb-4 pt-2 border-t border-gray-200/30 dark:border-white/[0.04]">
      <nav class="flex flex-col gap-0.5">
        {navItems.map(({ label, href }) => (
          <a
            href={href}
            class:list={[
              'px-3.5 py-2.5 rounded-lg text-sm font-medium transition-all duration-200',
              currentPath === href || (href !== '/' && currentPath.startsWith(href))
                ? 'bg-gp-600/10 dark:bg-neon-sky/10 text-gp-700 dark:text-neon-sky'
                : 'text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/[0.04]',
            ]}
          >
            {label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  function setupThemeToggle() {
    const toggles = document.querySelectorAll('#theme-toggle, #theme-toggle-mobile');
    toggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        document.documentElement.classList.toggle('dark');
        const isDark = document.documentElement.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    });

    const mobileBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    mobileBtn?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  }
  setupThemeToggle();
  document.addEventListener('astro:after-swap', setupThemeToggle);
</script>
